              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"ryan@example.com\",\n  \"password\": \"SecurePass456\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          },
          "response": []
