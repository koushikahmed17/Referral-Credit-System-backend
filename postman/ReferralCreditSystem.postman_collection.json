    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register - Lina (Referrer)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('token', response.data.token);",
                  "    pm.collectionVariables.set('userId', response.data.user.id);",
                  "    pm.collectionVariables.set('referralCode', response.data.user.referralCode);",
                  "    console.log('Lina registered! ReferralCode:', response.data.user.referralCode);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"lina@example.com\",\n  \"password\": \"SecurePass123\",\n  \"firstName\": \"Lina\",\n  \"lastName\": \"Smith\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            },
            "description": "Register Lina - she will receive a referral code"
          },
          "response": []
        },
        {
          "name": "Register - Ryan (With Referral Code)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('token', response.data.token);",
                  "    pm.collectionVariables.set('userId', response.data.user.id);",
                  "    console.log('Ryan registered with referral code!');",
                  "    console.log('Credits:', response.data.user.credits);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"ryan@example.com\",\n  \"password\": \"SecurePass456\",\n  \"firstName\": \"Ryan\",\n  \"lastName\": \"Johnson\",\n  \"referralCode\": \"{{referralCode}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            },
            "description": "Register Ryan using Lina's referral code (use {{referralCode}} from previous request)"
          },
          "response": []
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
