{
  "info": {
    "name": "Refaral Backend API",
    "_postman_id": "d1f0b8a2-3f0a-4c0f-9b2e-1234567890ab",
    "description": "Postman collection to test Auth endpoints for Refaral-backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000" },
    { "key": "token", "value": "" }
  ],
  "item": [
    {
      "name": "Auth - Register",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": {
          "raw": "{{baseUrl}}/api/auth/register",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "register"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"jane.doe@example.com\",\n  \"password\": \"StrongP@ssw0rd!\",\n  \"firstName\": \"Jane\",\n  \"lastName\": \"Doe\",\n  \"referralCode\": \"ABC123\"\n}"
        }
      },
      "response": []
    },
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": {
          "raw": "{{baseUrl}}/api/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "login"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"jane.doe@example.com\",\n  \"password\": \"StrongP@ssw0rd!\"\n}"
        }
      },
      "response": []
    },
    {
      "name": "Auth - Profile (GET /me)",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "{{baseUrl}}/api/auth/me",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "me"]
        }
      },
      "response": []
    },
    {
      "name": "Auth - Verify Token",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/auth/verify",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "verify"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"token\": \"{{token}}\"\n}"
        }
      },
      "response": []
    },
    {
      "name": "Auth - Refresh Token",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/auth/refresh",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "refresh"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"refreshToken\": \"{{token}}\"\n}"
        }
      },
      "response": []
    },
    {
      "name": "Auth - Status (optional auth)",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "{{baseUrl}}/api/auth/status",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "status"]
        }
      },
      "response": []
    },
    {
      "name": "Auth - Logout",
      "request": {
        "method": "POST",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "{{baseUrl}}/api/auth/logout",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "logout"]
        }
      },
      "response": []
    }
  ]
}
